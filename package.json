{
  "name": "skela",
  "version": "0.0.1",
  "description": "WordPress child theme for Skela",
  "author": "Upstatement",
  "repository": "git@github.com:Upstatement/skela-wordpress.git",
  "license": "ISC",
  "testing": {
    "urls": {
      "local": "https://skela.ups.dock",
      "staging": "",
      "production": ""
    },
    "accessibility": {
      "compliance": "Section508"
    }
  },
  "bundlesize": [
    {
      "path": "./dist/app.js",
      "maxSize": "10 kB"
    },
    {
      "path": "./dist/vendor.js",
      "maxSize": "110 kB"
    }
  ],
  "scripts": {
    "dev": "NODE_ENV=development node_modules/webpack/bin/webpack.js --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
    "watch": "NODE_ENV=development node_modules/webpack/bin/webpack.js --watch --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
    "production": "NODE_ENV=production node_modules/webpack/bin/webpack.js --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
    "lint:scripts": "eslint static/js/**/*.js --cache",
    "lint:styles": "stylelint 'static/sass/**/*.scss' --cache -f string --syntax scss",
    "lint:php": "./vendor/bin/phpcs --standard=phpcs.xml.dist --error-severity=1 --warning-severity=8 -p",
    "fix:php": "./vendor/bin/phpcbf",
    "test:bundlesize": "bundlesize",
    "test:a11y": "node tests/pa11y.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && npm run lint:scripts && npm run lint:styles && npm run lint:php"
    }
  },
  "dependencies": {
    "jquery": "^3.3.1"
  },
  "devDependencies": {
    "@upstatement/eslint-config": "^0.3.1",
    "@upstatement/prettier-config": "^0.3.0",
    "babel-eslint": "^10.0.1",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "browser-sync": "^2.26.3",
    "browser-sync-webpack-plugin": "^2.2.2",
    "bundlesize": "^0.17.0",
    "eslint": "^5.10.0",
    "eslint-config-prettier": "^3.3.0",
    "husky": "^1.2.1",
    "laravel-mix": "^2.1.14",
    "pa11y": "^5.1.0",
    "prettier": "^1.15.3",
    "pretty-quick": "^1.8.0",
    "stylelint": "^9.9.0",
    "stylelint-config-sass-guidelines": "^5.3.0",
    "stylelint-order": "^2.0.0",
    "stylelint-scss": "^3.4.1"
  }
}
